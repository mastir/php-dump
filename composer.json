{
    "name": "mastir/php-dump",
    "description": "Tool to convert app scopes into binary readable data dump",
    "license": "MIT",
    "type": "library",
    "keywords": [
        "php",
        "debug",
        "dump",
        "tool"
    ],
    "authors": [
        {
            "name": "Yevhen pochekuiev",
            "email": "themastir@gmail.com"
        }
    ],
    "require": {
        "php": "^8.1",
        "php-ds/php-ds": "^1.5",
        "ext-zlib": "*"
    },
    "require-dev": {
        "friendsofphp/php-cs-fixer": "*",
        "phpro/grumphp": "*",
        "phpstan/phpstan-strict-rules": "^1.0",
        "phpunit/php-code-coverage": "^10",
        "phpunit/phpunit": "^10",
        "vimeo/psalm": "^5"
    },
    "minimum-stability": "dev",
    "prefer-stable": true,
    "autoload": {
        "psr-4": {
            "Mastir\\PhpDump\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "Mastir\\Test\\PhpDump\\": "tests/"
        }
    },
    "config": {
        "allow-plugins": {
            "php-http/discovery": true,
            "dealerdirect/phpcodesniffer-composer-installer": true,
            "phpstan/extension-installer": true,
            "captainhook/captainhook-phar": false,
            "captainhook/plugin-composer": false,
            "phpro/grumphp": true
        },
        "sort-packages": true
    }
}
